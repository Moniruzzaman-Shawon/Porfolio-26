generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Project {
  id           String   @id @default(cuid())
  name         String
  slug         String   @unique
  description  String
  category     String
  techTags     String
  thumbnailUrl String?
  liveUrl      String?
  githubUrl    String?
  featured     Boolean  @default(false)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
